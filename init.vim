set termguicolors

set scrolloff=5
set cursorline
set number
set numberwidth=3
set relativenumber
set showtabline=2

set autoindent
set expandtab
set tabstop=2
set shiftwidth=2
set signcolumn

set ignorecase
set smartcase

" Netrw settings
let g:netrw_banner = 0
let g:netrw_browse_split = 0
let g:netrw_liststyle = 3
let g:netrw_altv = 1
let g:netrw_winsize = 18

" Clipboard support
set clipboard=unnamed,unnamedplus

" Splits
set splitbelow
set splitright
